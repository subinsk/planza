{
  "version": 2,
  "env": {
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/planza"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build:planza",
  "installCommand": "npm install --legacy-peer-deps",
  "github": {
    "silent": true
  }
}